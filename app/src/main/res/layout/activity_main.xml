<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.junsu.androidproject.MainActivity"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:text="로그인"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:textSize="24sp"
        android:padding="10dp"
        android:background="@drawable/abc3"
        android:textStyle="normal|bold"
        android:textColor="?android:attr/actionMenuTextColor"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/input"
        android:layout_toStartOf="@+id/input" />

    <TextView
        android:text="회원가입"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:textSize="24sp"
        android:padding="10dp"
        android:background="@drawable/abc3"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:textStyle="normal|bold"
        android:textColor="?attr/actionMenuTextColor"
        android:layout_alignBaseline="@+id/login"
        android:layout_alignBottom="@+id/login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="junsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:textSize="45sp"
        android:textColor="?android:attr/textColorPrimaryDisableOnly"
        android:padding="10dp"
        android:background="@drawable/abc7"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/abc4">

            <TextView
                android:text="ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="0.74"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_id"
                android:layout_weight="1"
                android:hint="아이디입력" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/abc4">

            <TextView
                android:text="PW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="0.52"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_pw"
                android:layout_weight="1"
                android:hint="비밀번호입력" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
