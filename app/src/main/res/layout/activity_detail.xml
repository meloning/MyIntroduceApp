<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:id="@+id/song_cover" />

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/seekBar"
        android:layout_below="@+id/song_cover"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="노래시간"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_toLeftOf="@+id/song_cover"
        android:layout_toStartOf="@+id/song_cover"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:id="@+id/song_time"
        android:textStyle="normal|bold" />

    <TextView
        android:text="노래길이"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_toRightOf="@+id/song_cover"
        android:layout_toEndOf="@+id/song_cover"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/song_length"
        android:textStyle="normal|bold" />

    <Button
        android:text="시작"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:id="@+id/play_stop"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:background="@drawable/abc3" />
</RelativeLayout>